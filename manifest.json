{
	"manifest_version": 2,
	"name": "Toggle Github.Dev",
	"description": "Adds a URL bar button to switch to Github Dev view of the repository",
	"version": "0.2",
	"applications":{
		"gecko": {
			"id": "toggle_github_dev@emvaized.dev"
		}
	},
	"developer": {
		"name": "Max Tsyba",
		"url": "https://github.com/emvaized/"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"permissions": [
        "*://github.com/*",
        "*://github.dev/*"
	],
	"icons": {
		"64": "icon.svg"
	},
	"page_action": {
		"default_icon": {
			"64": "github.svg"
		},
		"default_title": "Toggle github.dev",
        "show_matches": [
            "*://github.com/*",
            "*://github.dev/*"
        ],
        "hide_matches": [
            "*://github.com/login/*"
        ]
	}
}